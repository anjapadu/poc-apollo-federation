{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/schema/**/*.graphql"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
